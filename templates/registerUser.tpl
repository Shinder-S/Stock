<div class="col-md-4 col-md-offset-4 col-xs-4 col-md-offset-4">
  <form class="form-signin newUser" href="" method="POST" enctype="multipart/form-data">
    <h2 class="form-signin-heading">Check in</h2>

    <input type="text" name="userName" class="form-control" placeholder="User name" required="">
    <input type="email" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
    <input type="password" name="password" class="form-control" placeholder="Password" required="">
    <input type="password" name="repeatPassword" class="form-control" placeholder="Repeat password" required="">

    <button class="btn btn-lg btn-primary btn-block" type="submit">Check In</button>
  </form>
</div>